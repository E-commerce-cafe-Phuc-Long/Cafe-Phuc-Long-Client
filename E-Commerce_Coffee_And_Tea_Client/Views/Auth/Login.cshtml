@model E_Commerce_Coffee_And_Tea_Client.ViewModels.LoginVM
@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link href="~/Assets/css/output.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="h-screen flex justify-center items-center">
        <div class="relative m-auto flex justify-center items-center shadow-full-line rounded-3xl max-w-full w-[768px] min-h-[480px]">
            <form action="@Url.RouteUrl("Login")" method="post" class="block w-1/2 m-2">
                <h1 class="text-center text-3xl font-bold m-3">Đăng nhập</h1>
                <div class="flex justify-center">
                    <a href="#" class="border-2 rounded-xl text-xl text-red-500 px-2 py-1 mx-1"><i class='bx bxl-google'></i></a>
                    <a href="#" class="border-2 rounded-xl text-xl text-blue-500 px-2 py-1 mx-1"><i class='bx bxl-facebook'></i></a>
                </div>
                <span class="block font-thin text-center text-sm my-3">hoặc sử dụng email hoặc username mật khẩu của bạn</span>

                @Html.TextBoxFor(login => login.Username, new { @class = "block border-2 rounded-xl w-4/5 m-auto my-2 px-4 py-1 outline-none", type = "text", name = "", id = "", placeholder = "Email or Username" })
                @Html.ValidationMessageFor(temp => temp.Username)

                @Html.TextBoxFor(login => login.Password, new { @class = "block border-2 rounded-xl w-4/5 m-auto my-2 px-4 py-1 outline-none", type = "password", name = "", id = "", placeholder = "Password" })
                @Html.ValidationMessageFor(temp => temp.Password)

                <a href="#" class="block font-light text-center my-3">Bạn quên mật khẩu?</a>
                <button class="block m-auto border px-10 py-2 rounded-xl bg-blue-800 text-white" type="submit">Đăng nhập</button>
            </form>
            <div class="w-1/2 z-[10] text-white">
                <h1 class="text-center text-3xl font-bold m-5">Chào, bạn mới!</h1>
                <p class="text-center text-sm m-5">Đăng ký thông tin cá nhân của bạn để sử dụng tất cả các tính năng của trang web</p>
                <a href="@Url.RouteUrl("Register")" class="block w-[158px] text-center m-auto border py-2 rounded-xl bg-blue-800">Đăng ký</a>
            </div>
            <div class="absolute left-1/2 w-1/2 h-full bg-blue-800 rounded-s-[20%] rounded-e-3xl"></div>
        </div>
    </div>
    @if (ViewBag.Message != null) { }
</body>
</html>