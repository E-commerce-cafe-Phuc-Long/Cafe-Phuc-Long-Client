@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_LayoutPage_Main.cshtml";
}

<div class="h-screen flex justify-center items-center">
    <div class="relative m-auto flex justify-center items-center shadow-full-line rounded-3xl max-w-full w-[768px] min-h-[480px]">
        <form action="#" method="post" class="block w-1/2 m-2">
            <h1 class="text-center text-3xl font-bold m-3">Đăng ký tài khoản</h1>
            <div class="flex justify-center">
                <a href="#" class="border-2 rounded-xl text-xl text-red-500 px-2 py-1 mx-1"><i class='bx bxl-google'></i></a>
                <a href="#" class="border-2 rounded-xl text-xl text-blue-500 px-2 py-1 mx-1"><i class='bx bxl-facebook'></i></a>
            </div>
            <span class="block font-thin text-center text-sm my-3">hoặc sử dụng email của bạn để đăng ký</span>
            <input class="block border-2 rounded-xl w-4/5 m-auto my-2 px-4 py-1 outline-none" type="text" name="" id="" placeholder="Username">
            <input class="block border-2 rounded-xl w-4/5 m-auto my-2 px-4 py-1 outline-none" type="text" name="" id="" placeholder="Email">
            <input class="block border-2 rounded-xl w-4/5 m-auto my-2 px-4 py-1 outline-none" type="password" name="" id="" placeholder="Password">
            <button class="block m-auto border px-10 py-2 rounded-xl bg-blue-800 text-white" type="submit">Đăng ký</button>
        </form>
        <div class="w-1/2 z-[10] text-white">
            <h1 class="text-center text-3xl font-bold m-5">Chào bạn trở lại!</h1>
            <p class="text-center text-sm m-5">Đăng nhập thông tin cá nhân của bạn để sử dụng tất cả các tính năng của trang web</p>
            <a href="./login.html" class="block w-[158px] text-center m-auto border py-2 rounded-xl bg-blue-800">Đăng nhập</a>
        </div>
        <div class="absolute left-1/2 w-1/2 h-full bg-blue-800 rounded-s-[20%] rounded-e-3xl"></div>
    </div>
</div>