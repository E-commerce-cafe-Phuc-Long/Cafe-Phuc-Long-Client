@model E_Commerce_Coffee_And_Tea_Client.DataAccess.ChiTietSanPham
@{
    ViewBag.Title = "Thông tin sản phẩm";
    Layout = "~/Views/Shared/_LayoutPage_Main.cshtml";

    List<E_Commerce_Coffee_And_Tea_Client.DataAccess.Size> sizes = ViewBag.sizes;
    List<E_Commerce_Coffee_And_Tea_Client.DataAccess.LieuLuong> dosages = ViewBag.dosages;
}

<div class="w-[1280px] m-auto">
    <ul class="flex py-2">
        <li><a href="@Url.RouteUrl("Home")" class="block mx-2 hover:text-green-800">Trang chủ</a></li>
        <li>/</li>
        <li><a href="@Url.RouteUrl("Product")" class="block mx-2 hover:text-green-800">Sản phẩm</a></li>
    </ul>
</div>
<div class="w-[1280px] m-auto">
    <div class="my-10">
        <div class="flex">
            <div class="w-1/2 self-center">
                <div class="p-10 w-1/2 m-auto bg-gray-200 rounded-2xl">
                    <img src="https://hcm.fstorage.vn/images/2022/65000094-65000102-tra-sua-phuc-long-_3682b729-4ffc-4956-abb3-7026070663c2-og.png" alt="" class="w-[260px] m-auto">
                </div>
            </div>
            <div class="w-1/2">
                <div class="mb-2">
                    <h2 class="font-semibold text-2xl text-green-700">@Model.SanPham.tenSP (@Model.Size.tenSize)</h2>
                    <p class="font-thin text-sm">Mã: @Model.maSP</p>
                    <div class="flex justify-between items-center">
                        <p class="font-medium text-green-700 text-xl"><span>@string.Format("{0:N0} ₫", Model.donGia)</span></p>
                        <div class="flex me-5">
                            <div class="cursor-pointer"><i class='bx bxs-minus-square text-4xl text-green-800'></i></div>
                            <p class="self-center w-[30px] text-center">1</p>
                            <div class="cursor-pointer"><i class='bx bxs-plus-square text-4xl text-green-800'></i></div>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <h2 class="font-bold text-green-700">Chọn kích cỡ</h2>
                    <div class="flex">
                        @foreach (var s in sizes)
                        {
                            if (@Model.Size.maSize == s.maSize)
                            {
                                <a 
                                   href="@Url.RouteUrl("ProductDetail", new { productId = Model.maSP, sizeId = s.maSize })" 
                                   class="size-active w-[80px] py-3 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer"
                                   >@s.tenSize</a>
                            }
                            else
                            {
                                <a 
                                   href="@Url.RouteUrl("ProductDetail", new { productId = Model.maSP, sizeId = s.maSize })" 
                                   class="w-[80px] py-3 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer"
                                   >@s.tenSize</a>
                            }
                        }
                    </div>
                </div>
                <div class="mb-2">
                    <h2 class="font-bold text-green-700">Ngọt</h2>
                    <div class="flex">
                        @foreach (var d in dosages)
                        {
                            if (d.maLL.Equals("LL002"))
                            {
                                <div class="sweet-active min-w-[80px] py-3 px-2 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer">@d.tenLL</div>
                            }
                            else
                            {
                                <div class="min-w-[80px] py-3 px-2 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer">@d.tenLL</div>
                            }
                        }
                    </div>
                </div>
                <div class="mb-2">
                    <h2 class="font-bold text-green-700">Đá</h2>
                    <div class="flex">
                        @foreach (var d in dosages)
                        {
                            if (d.maLL.Equals("LL002"))
                            {
                                <div class="sweet-active min-w-[80px] py-3 px-2 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer">@d.tenLL</div>
                            }
                            else
                            {
                                <div class="min-w-[80px] py-3 px-2 my-1 me-2 border rounded-xl text-center font-medium bg-gray-100 cursor-pointer">@d.tenLL</div>
                            }
                        }
                    </div>
                </div>
                <div class="mb-2">
                    <button class="block border px-10 py-2 my-5 rounded-xl bg-green-800 text-white"><i class='bx bx-cart-add pe-2'></i>Thêm vào giỏ hàng</button>
                </div>
            </div>
        </div>
        <div class="my-5">
            <h2 class="font-semibold text-2xl text-green-700 my-3">Mô Tả Sản Phẩm</h2>
            <p>@Model.SanPham.moTa</p>
        </div>
    </div>
</div>
@Html.Action("_PartialPage_Cart", "Cart")